<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_parent"
    android:background="@color/catalogueBackground">

    <ImageView
        android:id="@+id/ch_productImage"
        android:layout_width="0dp"
        android:layout_height="@dimen/_25sdp"
        android:layout_margin="@dimen/_10sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/place_holder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/g1"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ch_productFav"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/star_un"
        app:layout_constraintBottom_toTopOf="@id/ch_productImage"
        app:layout_constraintLeft_toRightOf="@id/ch_productImage"
        app:layout_constraintRight_toRightOf="@id/ch_productImage"
        app:layout_constraintTop_toTopOf="@id/ch_productImage" />


    <View
        android:id="@+id/fv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/ch_productImage"
        app:layout_constraintRight_toRightOf="@id/ch_productImage"
        app:layout_constraintTop_toTopOf="@id/ch_productImage" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.16" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/ch_pd_productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/roboto_regular"
        android:text="EggPlant"
        android:textColor="@color/labelColor"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/g1"
        app:layout_constraintRight_toLeftOf="@id/g2"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.47" />

    <ImageView
        android:id="@+id/ch_pd_productOrigin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:fontFamily="@font/roboto_regular"
        android:src="@drawable/place_holder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/g2"
        app:layout_constraintRight_toRightOf="@id/g3"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.54" />

    <ImageView
        android:id="@+id/ch_pd_productNego"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:fontFamily="@font/roboto_regular"
        android:src="@drawable/place_holder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/g3"
        app:layout_constraintRight_toRightOf="@id/g4"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.61" />

    <ImageView
        android:id="@+id/ch_pd_productBio"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:fontFamily="@font/roboto_regular"
        android:src="@drawable/place_holder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/g4"
        app:layout_constraintRight_toRightOf="@id/g5"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />


    <TextView
        android:id="@+id/ch_pd_productPrice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/g5"
        app:layout_constraintRight_toRightOf="@id/g6"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <TextView-->
    <!--        android:id="@+id/ch_pd_productUnit"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:fontFamily="@font/roboto_regular"-->
    <!--        android:singleLine="false"-->
    <!--        android:textAlignment="center"-->
    <!--        android:textColor="@color/red"-->
    <!--        android:textSize="@dimen/_9sdp"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintLeft_toLeftOf="@id/g5"-->
    <!--        app:layout_constraintRight_toRightOf="@id/g6"-->
    <!--        app:layout_constraintTop_toTopOf="@id/g7" />-->


    <Button
        android:id="@+id/btnPurchaseBuy"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@color/signInButtonColor"
        android:fontFamily="@font/roboto_bold"
        android:padding="2dp"
        android:text="@string/buy"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/g6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="ch_pd_productName,btnPurchaseBuy,ch_productImage,ch_pd_productPrice" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/edittextHintColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier" />


</androidx.constraintlayout.widget.ConstraintLayout>


